			description="COM_VM2SMS_FIELD_CONFIG_PHONE_FILED_DESC"
			label="COM_VM2SMS_FIELD_CONFIG_PHONE_FILED_LABEL"
			default="phone_2"
		>
		<option value="phone_1">COM_VM2SMS_FIELD_CONFIG_OPTION_PHONE_1</option>
		<option value="phone_2">COM_VM2SMS_FIELD_CONFIG_OPTION_PHONE_2</option>
	</field>
		<field name="custom_phone_field" type="text"
			label="COM_VM2SMS_FIELD_CONFIG_CUSTOM_PHONE_FILED_LABEL"
			description=""/>


	</fieldset>
	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field name="rules" type="rules"
			component="com_vm2sms"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>
