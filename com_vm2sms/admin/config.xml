<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_VM2SMS_COMPONENT_LABEL"
		description="COM_VM2SMS_COMPONENT_DESC"
	>
	<field name="manager_phones" type="text"
			description="COM_VM2SMS_FIELD_CONFIG_MANAGER_DESC"
			label="COM_VM2SMS_FIELD_CONFIG_MANAGER_LABEL"
		/>
		<field name="sender_name" type="text"
			description="COM_VM2SMS_FIELD_CONFIG_SENDER_DESC"
			label="COM_VM2SMS_FIELD_CONFIG_SENDER_LABEL"
		/>
		<field type="spacer" name="myspacer" label="COM_VM2SMS_SPACER_WORKTIME" />
		<field name="work_start" type="text"
			description="COM_VM2SMS_FIELD_CONFIG_WORKSTART_DESC"
			label="COM_VM2SMS_FIELD_CONFIG_WORKSTART_LABEL"
			size="5"
		/>
		<field name="work_end" type="text"
			description="COM_VM2SMS_FIELD_CONFIG_WORKEND_DESC"
			label="COM_VM2SMS_FIELD_CONFIG_WORKEND_LABEL"
			size="5"
		/>
